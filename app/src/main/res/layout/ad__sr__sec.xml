<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/srsec"
    tools:context="com.example.babyd_000.dav_jalandhar.Ad_Sr_Sec">

    <TextView
        android:textStyle="bold|italic"
        android:id="@+id/srheader"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:shadowColor="#313131"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="0.01"
        android:textAlignment="center"
        android:text="Senior Secondary"
        android:fontFamily="serif"/>

    <View
        android:layout_margin="5dp"
        android:id="@+id/srdiv"
        android:layout_below="@+id/srheader"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <ScrollView
        android:layout_below="@+id/srdiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:textColor="#ff0000"
                    android:textSize="22dp"
                    android:typeface="serif"
                    android:text="Subjects Offered:"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="Compulsory Subjects for all Groups:"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:typeface="serif"
                    android:textColor="#2d2d2d"
                    android:textSize="17dp"
                    android:text="1) General English\n2) General Punjabi\n3) Environment Science\n4) Computer Applications"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="-> Elective Subjects in Humanities:"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textColor="#2d2d2d"
                    android:text="* Economics\n* Mathematics\n* Sanskrit\n* Hindi\n* Punjabi\n* English\n* Political Science\n* Geography\n* History\n* Music\n* Physical Education\n* Philosophy"/>
            </TableRow>


            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="-> Science Group:"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textColor="#2d2d2d"
                    android:text="~ Non-Medical\n     * Physics\n     * Chemistry\n     * Mathematics"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textColor="#2d2d2d"
                    android:text="~ Medical\n     * Physics\n     * Chemistry\n     * Biology"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="-> Commerce Group:"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textColor="#2d2d2d"
                    android:text="~ 10+1\n     * Business Economics I\n     * Accounting I\n     * Modern Office Practice\n     * Business Study I"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textColor="#2d2d2d"
                    android:text="~ 10+2\n     * Business Economics II\n     * Accounting II\n     * Fundamentals of E-Business\n     * Business Study II"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/RMSrSec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="RM"
                    android:text="Read More"
                    android:textAlignment="textEnd"
                    android:textColor="@drawable/color_readmore"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</RelativeLayout>
