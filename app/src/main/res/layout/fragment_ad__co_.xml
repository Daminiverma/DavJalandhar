<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/carrer"
    tools:context="com.example.babyd_000.dav_jalandhar.Ad_Sr_Sec">

    <TextView
        android:id="@+id/ugheader"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Carrer Orriented Programs"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:shadowColor="#333435"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="0.01"
        android:fontFamily="serif" />

    <View
        android:id="@+id/ugdiv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ugheader"
        android:layout_margin="5dp"
        android:background="#000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ugdiv">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TableRow
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:layout_height="50dp">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/star"/>
                <TextView
                    android:textColor="#000000"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:text="Food Science, Quality Control"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:layout_height="50dp">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/star"/>
                <TextView
                    android:textColor="#000000"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:text="Communication Skills"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:layout_height="50dp">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/star"/>
                <TextView
                    android:textColor="#000000"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:text="Insurance Management"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:layout_height="50dp">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/star"/>
                <TextView
                    android:textColor="#000000"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:text="Data Care Management"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:layout_height="50dp">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/star"/>
                <TextView
                    android:textColor="#000000"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:text="Mass Communication and Video Production"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:layout_height="50dp">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/star"/>
                <TextView
                    android:textColor="#000000"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:text="Corporat and Legal Environment"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:layout_height="50dp">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/star"/>
                <TextView
                    android:textColor="#000000"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:text="Internet and Web Designing"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/coplink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="RM"
                    android:text="Read More"
                    android:textAlignment="textEnd"
                    android:textColor="@drawable/color_readmore"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</RelativeLayout>